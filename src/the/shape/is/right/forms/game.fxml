<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>


<GridPane minHeight="900.0" minWidth="1600.0" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="the.shape.is.right.controller.GameController">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" />
        <ColumnConstraints hgrow="SOMETIMES" />
        <ColumnConstraints hgrow="SOMETIMES" />
        <ColumnConstraints hgrow="SOMETIMES" />
    </columnConstraints>
    <children>
        <Label alignment="TOP_CENTER" contentDisplay="CENTER" text="The Shape is Right - Play" GridPane.columnSpan="4" GridPane.halignment="CENTER" GridPane.valignment="TOP">
            <font>
                <Font name="Calibri Light" size="27.0" />
            </font>
            <GridPane.margin>
                <Insets top="20.0" />
            </GridPane.margin>
        </Label>
        <FlowPane fx:id="trayFlowPane" minHeight="-Infinity" prefHeight="200.0" GridPane.columnSpan="4" GridPane.rowIndex="2">
            <GridPane.margin>
                <Insets bottom="10.0" top="10.0" />
            </GridPane.margin>
        </FlowPane>
        <FlowPane fx:id="shapeFlowPane" minHeight="-Infinity" prefHeight="200.0" GridPane.columnSpan="4" GridPane.rowIndex="3">
            <GridPane.margin>
                <Insets bottom="10.0" top="10.0" />
            </GridPane.margin>
        </FlowPane>
        <Button fx:id="submitGuessButton" mnemonicParsing="false" onMouseClicked="#submitGuessButtonClicked" text="Submit Guess" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="4" GridPane.valignment="BOTTOM">
            <GridPane.margin>
                <Insets bottom="20.0" top="20.0" />
            </GridPane.margin>
        </Button>
      <Label fx:id="pointsLabel" text="Points: 0" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="1" />
    </children>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
</GridPane>
